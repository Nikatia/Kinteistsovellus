

<canvas style="width:100%;max-width:400px;max-height:400px" id="typeChart"></canvas>

@*<script src="https://cdn.jsdelivr.net/npm/chart.js@4.0.1/dist/chart.umd.js"></script>*@
<script type="text/javascript">
    $(document).ready(function(){
               //CHART
        let labelTexts = [@Html.Raw(ViewBag.Category)];
        let dataValues = [@ViewBag.Price];
        console.log(labelTexts);
        console.log(dataValues);
        const ctx = document.getElementById('typeChart');
        
        var kaavio = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: labelTexts,
                datasets: [{
                    label: ' euroa',
                    data: dataValues,
                    borderColor: 'white',
                    backgroundColor: ['rgba(120, 194, 173, 1)',
                        'rgba(120, 194, 173, 0.8)',
                        'rgba(120, 194, 173, 0.6)',
                        'rgba(120, 194, 173, 0.4)',
                        'rgba(120, 194, 173, 0.2)',
                        'rgba(96, 155, 138, 0.8)',
                        'rgba(96, 155, 138, 0.6)',
                        'rgba(96, 155, 138, 0.4)',
                        'rgba(96, 155, 138, 0.2)',
                        'rgba(84, 135, 120, 0.8)',
                        'rgba(84, 135, 120, 0.6)',
                        'rgba(84, 135, 120, 0.4)',
                        'rgba(84, 135, 120, 0.2)',],
                    fill: true,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    title: {
                        display: true,
                        text: 'Käytetyn rahan kokonaismäärä kulutyypin mukaan',
                        font: {
                            size: 15,
                            family: "sans-serif"
                        }
                    },
                    legend: {
                        position: 'bottom',
                        labels: {
                            usePointStyle: true,
                            pointStyle: 'rectRounded',
                            pointStyleWidth: 70,
                            font: {
                                size: 15,
                                family: "sans-serif",
                                style: "normal"
                            }
                        }
                    }
                }
            }
        });
    });

</script>