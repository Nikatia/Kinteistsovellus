@model Kiinteistosovellus.Models.OtherSpendingTypes

<div class="modal fade" id="ModalOthSpendTypeCreate">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h3>Luo uusi kulutyyppi</h3>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "createForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            Tyypin nimi* @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-secondary" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TypeName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                 }
            </div>
           
            <div class="modal-footer">
                <div class="form-actions no-color">
                    <input type="button" value="Create" id="submitDataModal" class="btn btn-primary" />
                    @Html.ActionLink("Takaisin", "Index")
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#submitDataModal").click(function () {
        submitModalPost("OtherSpendingTypes", "Create", "createForm", "ModalOthSpendTypeCreate");
    });

</script>
