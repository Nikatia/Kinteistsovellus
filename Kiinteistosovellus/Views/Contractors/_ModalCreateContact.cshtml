@model Kiinteistosovellus.Models.Contacts

<div class="modal fade" id="ModalContactCreate">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Luo uusi yhteystiedot</h3>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "createForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <h4>@Html.DisplayFor(model => model.Contractors.Name)</h4>
                        <div class="form-group">
                            Urakoitsija
                            <div class="col-md-10">
                                @Html.DropDownList("ContractorID", null, htmlAttributes: new { @class = "form-control", @id = "urakoitsijoidenId", @onchange= "paivitaUrakoitsijoidenKentta(this.value)" })
                                @Html.ValidationMessageFor(model => model.ContractorID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    
                        <div class="form-group">
                            Henkilö
                            <div class="col-md-10">
                                @Html.DropDownList("PersonID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PersonID, "", new { @class = "text-danger" })
                                <div style="text-align:right; padding-right:30px"><a class="card-link" role="button" id="lisaaUusiHiddenField">Lisää uusi henkilö</a></div>
                            </div>
                        </div>

                        <div class="form-group" id="hiddenFieldAddPerson" style="display:none">
                            <br />
                            Uusi henkilö<br />
                            Etunimi: <span class="field-validation-error text-danger" id="fakeErrorFirstName"></span>
                            <div class="col-md-10 input-group">
                                <input type="text" maxlength="100" size="500" class="form-control" id="pseudoFormFirstName" onkeyup="paivitaEtunimiKentta()" />
                            </div>
                            Sukunimi: <span class="field-validation-error text-danger" id="fakeErrorLastName"></span>
                            <div class="col-md-10 input-group">
                                <input type="text" maxlength="100" size="500" class="form-control" id="pseudoFormLastName" onkeyup="paivitaSukunimiKentta()" /><br />
                            </div>
                            Kuvaus: <span class="field-validation-error text-danger" id="fakeErrorDescription"></span>
                            <div class="col-md-10 input-group">
                                <input type="text" maxlength="100" size="500" class="form-control" id="pseudoFormDescription" onkeyup="paivitaKuvausKentta()" /><br />
                            </div>
                            <div style="text-align: right; padding-right: 5px">
                                <a class="card-link" role="button" id="lisaaUusiHenkilo">Lisää</a> | <a class="card-link" role="button" id="closeAddPerson">Peruuta</a>
                            </div>
                        </div>

                        <div class="form-group">
                            Puhelinumero
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            Sähköposti
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @*Temporary solution for LoginID until Login system is done*@
                        @*@Html.TextBoxFor(model => model.ContractorID, "ContractorID", new {@class = "form-control", @Hidden = "true" })*@
                        @Html.TextBoxFor(model => model.LoginID, "LoginID", new { @class = "form-control", @Value = ViewBag.LoginID, @Hidden = "true" })
                    </div>
                
                }
            </div>
            <div class="modal-footer">
                <div class="form-actions no-color">
                    <input type="button" value="Create" id="submitDataModal" class="btn btn-primary" />
                    <a href="/Contractors/Index" class="card-link" role="button">Takaisin</a>
                </div>
            </div>
            <div id="divForPartialPseudo" style="display:none;"></div>
        </div>
    </div>
</div>
<script type="text/javascript">

    $("#submitDataModal").click(function () {
        submitModalPost("Contractors", "CreateContact", "createForm", "ModalContactCreate");
    });



    $(document).ready(function () {
        partialViewGet("Contractors", "CreatePerson", "divForPartialPseudo");
    });


    function paivitaEtunimiKentta() {
        var falseFormInput = $("#pseudoFormFirstName");
        var realForm = $("#FirstName");
        realForm.val(falseFormInput.val());
    }
    function paivitaSukunimiKentta() {
        var falseFormInput = $("#pseudoFormLastName");
        var realForm = $("#LastName");
        realForm.val(falseFormInput.val());
    }
    function paivitaKuvausKentta() {
        var falseFormInput = $("#pseudoFormDescription");
        var realForm = $("#Description");
        realForm.val(falseFormInput.val());
    }
    function paivitaUrakoitsijoidenKentta() {
        var falseFormInput = $("#urakoitsijoidenId");
        var realForm = $("#ContractorID");
        realForm.val(falseFormInput.val());
    }
    //Tuo tyypinlisäyskentän näkyviin---- TÄTÄ PITÄÄ  PÄIVITTÄÄ TYYLIKKÄÄMMÄKSI
    $("#lisaaUusiHiddenField").click(function () {
        console.log("toimii");
        if (document.getElementById("hiddenFieldAddPerson").style.display == "none") {
            console.log("display none");
            document.getElementById("hiddenFieldAddPerson").style.display = "inline-block";
            document.getElementById("lisaaUusiHiddenField").style.display = "none";
        } else {
            console.log("display muu");
            document.getElementById("hiddenFieldAddPerson").style.display = "none";
            document.getElementById("lisaaUusiHiddenField").style.display = "block";
        }
    });

    $("#lisaaUusiHenkilo").click(function () {
        partialViewSubmit("Contractors", "CreatePerson", "divForPartialPseudo", "createPersonForm", "PersonID");
    });

    $("#closeAddPerson").click(function () {
        document.getElementById("hiddenFieldAddPerson").style.display = "none";
        document.getElementById("lisaaUusiHiddenField").style.display = "block";
    });
</script>