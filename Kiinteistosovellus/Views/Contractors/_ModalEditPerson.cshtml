@model Kiinteistosovellus.Models.Persons

<div class="modal fade" id="ModalPersonEdit">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Muokkaa henkilö</h3>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "editPersonForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.PersonID)
                        @Html.HiddenFor(model => model.ContractorID)

                        <div class="form-group">
                            Etunimi* @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            Sukunimi* @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            Kuvaus @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <div class="form-actions no-color">
                    <input type="button" value="Tallenna" id="submitDataModal" class="btn btn-primary" />
                    <a href="#" id="back" data-bs-dismiss="modal" onclick='destroyDiv()'>Takaisin</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $("#submitDataModal").click(function () {
        submitModalPost("Contractors", "EditPerson", "editPersonForm", "ModalPersonEdit");
    });

    function allHaveAttribute(elements, attrName, attrValue) {
        // Do all elements have given attribute?
        for (var i = 0; i < elements.length; i++) {
            if (!elements[i].hasAttribute(attrName)) return false;
        }

        //if given value...
        if (attrValue) {
            for (i = 0; i < elements.length; i++) {
                if (elements[i].getAttribute(attrName) !== attrValue) //is different than we want
                    return false;
            }
            return true;
        } else { // if elements have the attribute we have given
            return true;
        }
    }

    $(document).ready(function () {
        var els = document.querySelectorAll('span.field-validation-error.text-danger');
        if (allHaveAttribute(els, 'innerText', '') == false) {
            $("#back").attr('href', '/Contractors/Index');
            $("#back").removeAttr('data-bs-dismiss');
            $("#back").removeAttr('onclick');
        }
    });

    function destroyDiv() {
        var div = parent.document.getElementById("ModalPersonEdit");
        div.parentNode.removeChild(div);
    }

</script>

