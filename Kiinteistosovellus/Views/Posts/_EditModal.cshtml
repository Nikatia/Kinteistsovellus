@model Kiinteistosovellus.Models.Posts





<div class="modal fade" id="ModalMSEdit">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                @*<h2>Edit </h2>*@
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("_editModal", "MonthlySpendings", FormMethod.Post, new { id = "editMSForm" }))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Post</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.PostID)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PostCode, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PostCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PostCode, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                    <div class="form-group">
                        <input type="button" id="submitModalMSEdit" style="display:none" value="Tallenna" class="btn btn-primary" />
                    </div>




                
                    }
                </div>
            <div class="modal-footer" style="display:inline-block">
                @*<button type="submit" class="btn btn-primary" form="editMSForm">Tallenna</button>*@
                <button type="submit" id="submitEdit" class="btn btn-primary">Tallenna</button>
                @Html.ActionLink("Takaisin", "Index", "Monthly_spendings", new { @Class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
    
<script type="text/javascript">
    $("#submitEdit").click(function () {
        $("#submitModalMSEdit").click();
    });




    var indexUrl = '/MonthlySpendings/Index';
    $("#submitModalMSEdit").click(function () {
        //console.log("toimiiko");
        var form = this.form;
        //console.log(parent.document.getElementById("ModalPlansCreate"));
        var data = new FormData(form);
        var detailDivCreate = parent.document.getElementById("ModalMSEdit");

        //console.log(data);
        $.ajax({
            url: "/MonthlySpendings/_EditModal",
            cache: false,
            contentType: false,
            processData: false,
            method: 'POST',
            type: "POST",
            data: data,
            success: function (result) {
                console.log(result);
                if (result == "") {
                    //console.log("null tuli");
                    window.location.href = indexUrl;
                } else {
                    //console.log("nullia ei tullut");
                    $(detailDivCreate).html("");
                    $(detailDivCreate).replaceWith(result);
                    $("#ModalMSEdit").modal("show");
                }

            }
        });
    });

</script>




