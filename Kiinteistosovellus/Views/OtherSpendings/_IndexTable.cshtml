@model IEnumerable<Kiinteistosovellus.Models.OtherSpendings>

@foreach (var item in Model)
{
    <tr class="card-body filtering">
        <td>@Html.ValueFor(modelItem => item.DateBegin, "{0:dd.MM.yyyy}")</td>
        @{
            if (item.DateEnd != null)
            {
                <td>@Html.ValueFor(modelItem => item.DateEnd, "{0:dd.MM.yyyy}")</td>
            }
            else
            {
                <td>@Html.ValueFor(modelItem => item.DateBegin, "{0:dd.MM.yyyy}")</td>
            }
        }
        <td>@Html.DisplayFor(modelItem => item.OtherSpendingTypes.TypeName)</td>
        <td style="word-break:break-word;  width:35%;">@Html.DisplayFor(modelItem => item.Description)</td>
        <td>@Html.DisplayFor(modelItem => item.Price)</td>
        <td>@Html.DisplayFor(modelItem => item.Contractors.Name)</td>
        <td>
            @if (item.ImageUrl != null)
            {
                <img class="images" src="@Html.DisplayFor(modelItem => item.ImageUrl)" width="100" />
            }
            else
            {@Html.DisplayFor(modelItem => item.ImageUrl)}
        </td>
        <td>
            <a class="card-link ikonka getOtherSpendingId" title="Muokkaa Kulu" data-otherspendingid="@item.OtherSpendingsID" role="button"><img src="/Icons/square-edit.svg" height="30"></a>
            <a class="card-link ikonka delOtherSpendingId" title="Poista Kulu" data-otherspendingid2="@item.OtherSpendingsID" role="button"><img src="/Icons/square-delete.svg" height="30"></a>
        </td>
    </tr>
}