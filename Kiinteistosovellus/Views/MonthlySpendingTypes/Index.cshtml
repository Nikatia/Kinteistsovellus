@model IEnumerable<Kiinteistosovellus.Models.MonthlySpendingTypes>

@{
    ViewBag.Title = "Index";
}



<p>
    @Html.ActionLink("Luo uusi", "Create", "", new { @class = "btn btn-secondary", @style = "margin-left:36%;margin-top:7px;font-size:18px" })
</p>

<div id="ModalPlaceEdit"></div> @*//Tähän tulee modaalit*@
<div id="ModalPlaceDelete"></div>
<div id="ModalPlaceCreate"></div>

<table class="table">
    <tr>
        <th>
            Kulutustyyppi

        </th>
        <th>
            Yksikkö
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Logins.UserName)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Logins.UserName)
                </td>*@
            <!--<td>
                @Html.ActionLink("Muokkaa", "Edit", new { id = item.SpendingTypeID }) |-->
            @*@Html.ActionLink("Details", "Details", new { id=item.SpendingTypeID }) |*@
            <!--@Html.ActionLink("Poista", "Delete", new { id = item.SpendingTypeID })
            </td>-->
            <td>
                <button class="getMSTOrderId" data-orderid="@item.SpendingTypeID">Muokkaa</button>

                <button class="getMSTId" data-id="@item.SpendingTypeID">Poista</button>
            </td>
        </tr>
    }

</table>
<script type="text/javascript">

    $(document).ready(function () {
        $(".getOrderId").click(function () {
            let MSEditId = $(this).data("orderid");

            var url = "/MonthlySpendings/_EditModal/?id=" + MSEditId;

            var $detailDivEdit = $("#ModalPlaceEdit");
            $.get(url, function (data) {
                $detailDivEdit.replaceWith(data);
                $("#ModalMSEdit").modal("show");

            });

        });
    });

    $(document).ready(function () {
        $(".getId").click(function () {
            let MSDeleteId = $(this).data("id");

            var url = "/MonthlySpendings/_DeleteModal/?id=" + MSDeleteId;

            var $detailDivEdit = $("#ModalPlaceDelete");
            $.get(url, function (data) {
                $detailDivEdit.replaceWith(data);
                $("#ModalMSDelete").modal("show");

            });

        });
    });
    $(document).ready(function () {
        $("#CreateMS").click(function () {
            var url = "/MonthlySpendings/_CreateModal";

            var $detailDivEdit = $("#ModalPlaceCreate");
            $.get(url, function (data) {
                $detailDivEdit.replaceWith(data);
                $("#ModalMSCreate").modal("show");

            });
        });
    });