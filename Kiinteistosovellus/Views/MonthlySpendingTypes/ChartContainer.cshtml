@model Kiinteistosovellus.Models.MonthlyTypeSpendingsByMonth

<div class="modal fade" id="ModalMonthSpendTypeChart">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3>@ViewBag.TypeName: Kaavio</h3>
            </div>

            <div class="modal-body">
                <div id="chartMonthContainer"></div>
                <div style="padding-left:33%">@Html.DropDownListFor(model => model.Vuosi, null, new { @class = "form-control form-select" })</div>
            </div>
            <div class="modal-footer">
                <div class="form-actions no-color">
                    <a href="/MonthlySpendingTypes" type="button" class="btn btn-primary">Takaisin</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var thisYear = new Date().getFullYear();
        document.getElementById("Vuosi").value = thisYear;
        var url = "/MonthlySpendingTypes/Chart/" + @ViewBag.TypeID + "/" + thisYear;
        var divForPartial = $("#chartMonthContainer");

        $.ajax({
            url: url,
            cache: false,
            contentType: false,
            processData: false,
            method: 'get',
            type: "get",
            success: function (result) {
                $(divForPartial).html("");
                $(divForPartial).html(result);
            }
        });
    });
    $('#Vuosi').change(function () {
        var thisYear = $(this).val();
        var url = "/MonthlySpendingTypes/Chart/" + @ViewBag.TypeID + "/" + thisYear;
        var divForPartial = $("#chartMonthContainer");

        $.ajax({
            url: url,
            cache: false,
            contentType: false,
            processData: false,
            method: 'get',
            type: "get",
            success: function (result) {
                $(divForPartial).html("");
                $(divForPartial).html(result);
            }
        });
    });

</script>
