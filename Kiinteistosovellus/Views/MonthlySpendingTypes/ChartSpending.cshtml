<canvas id="myChartUnits"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.0.1/dist/chart.umd.js"></script>
<script>
    $(document).ready(function () {
        var xValues = ["Tammikuu", "Helmikuu", "Maaliskuu", "Huhtikuu", "Toukokuu", "Kesäkuu", "Heinäkuu", "Elokuu", "Syyskuu", "Lokakuu", "Marraskuu", "Joulukuu"];
        let yValues = @ViewBag.Year;
        let yValues2 =@ViewBag.Year2;
        new Chart("myChartUnits", {
            type: "line",
            data: {
                labels: xValues,
                datasets: [{
                    data: yValues,
                    borderColor: 'rgba(120, 194, 173)',
                    backgroundColor: 'rgba(120, 194, 173, 0.2)',
                    borderWidth: 2,
                    borderRadius: 5,
                    label: @ViewBag.ThisYear,
                    fill: false,
                    tension: 0.3
                }, {
                        data: yValues2,
                            borderColor: 'rgba(84, 135, 120)',
                            backgroundColor: 'rgba(84, 135, 120, 0.2)',
                            borderWidth: 2,
                            borderRadius: 5,
                            label: @ViewBag.LastYear,
                            fill: false,
                            tension: 0.3
}]
            },
            options: {
                legend: { display: false },
                plugins: {
                    title: {
                        display: true,
                        text: 'Kuukausittain käytetty yksikkömäärä(@ViewBag.UnitName).'
                    },
                    legend: {
                        display: true,
                        labels: {
                            usePointStyle: true,
                            pointStyle: 'rectRounded',
                            pointStyleWidth: 70
                        }
                    }
                }
            }
        });
    });
</script>

