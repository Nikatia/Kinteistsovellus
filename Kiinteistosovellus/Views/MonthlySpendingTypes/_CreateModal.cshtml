@model Kiinteistosovellus.Models.MonthlySpendingTypes






<div class="modal fade" id="ModalMSCreate">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Luo uusi kuukausittainen kulu</h2>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm(@*"_CreateModal", "MonthlySpendings", FormMethod.Post,*@ new { id = "createMSForm" }))
{
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>MonthlySpendingTypes</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.TypeName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TypeName, "Kulutustyyppi", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Unit, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Unit, "Yksikkö", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Unit, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LoginID, "LoginID", htmlAttributes: new { @Hidden = "hidden", @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("LoginID", null, htmlAttributes: new { @Hidden = "hidden", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LoginID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="button" id="submitModal" style="display:none" value="Tallenna" class="btn btn-primary" />
            </div>
            </div>
}



                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }


                <div class="modal-footer" style="display:inline-block">
                    @*<input type="button" id="submitModal" value="Tallenna" class="btn btn-primary" />*@
                    <button type="submit" id="submitCreate" class="btn btn-primary">Tallenna</button>
                    @*<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Takaisin</button>*@
                    @Html.ActionLink("Takaisin", "Index", "MonthlySpendings", new { @Class = "btn btn-secondary" })

                </div>



            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $("#submitCreate").click(function () {
        $("#submitModal").click();
    });




    var indexUrl = '/MonthlySpendings/Index';
    $("#submitModal").click(function () {

        var form = this.form;
        var data = new FormData(form);
        var detailDivCreate = parent.document.getElementById("ModalMSCreate");


        $.ajax({
            url: "/MonthlySpendings/_CreateModal",
            cache: false,
            contentType: false,
            processData: false,
            method: 'POST',
            type: "POST",
            data: data,
            success: function (result) {
                if (result == "") {
                    window.location.href = indexUrl;
                } else {
                    $(detailDivCreate).html("");
                    $(detailDivCreate).replaceWith(result);
                    $("#ModalMSCreate").modal("show");
                }

            }
        });
    });

</script>