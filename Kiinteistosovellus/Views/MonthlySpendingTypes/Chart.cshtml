@model Kiinteistosovellus.Models.MonthlySpendingTypes

<div class="modal fade" id="ModalMonthSpendTypeChart">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3>@ViewBag.TypeName: Kaavio</h3>
            </div>

            <div class="modal-body">
                <canvas id="myChart"></canvas>
            </div>
            <div class="modal-footer">
                <div class="form-actions no-color">
                    @Html.ActionLink("Takaisin", "Index")
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    //CHART
    var xValues = ["Tammikuu", "Helmikuu", "Maaliskuu", "Huhtikuu", "Toukokuu", "Kesäkuu", "Heinäkuu", "Elokuu", "Syyskuu", "Lokakuu", "Marraskuu", "Joulukuu"];
    let yValues = @ViewBag.Year;
    new Chart("myChart", {
        type: "line",
        data: {
            labels: xValues,
            datasets: [{
                data: yValues,
                borderColor: 'rgba(5, 163, 23, 0.8)',
                backgroundColor: 'rgba(5, 163, 23, 0.2)',
                label: " euro",
                fill: false
            }]
        },
        options: {
            legend: { display: false },
            plugins: {
                title: {
                    display: true,
                    text: 'Kuukausikuluihin käytetty raha ajan mittaan'
                }
            }
        }
    });

    console.log(@ViewBag.Year);
</script>
