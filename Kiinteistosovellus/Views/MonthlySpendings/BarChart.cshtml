<canvas id="myBarChart"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.0.1/dist/chart.umd.js"></script>
<script>
    $(document).ready(function () {
        var xValues = [@ViewBag.Type];
        let yValues = @ViewBag.Price;
        new Chart("myBarChart", {
            type: "bar",
            data: {
                labels: xValues,
                datasets: [{
                    data: yValues,
                    borderColor: 'rgba(5, 163, 23, 0.8)',
                    backgroundColor: 'rgba(5, 163, 23, 0.2)',
                    label: " euro",
                    fill: false
                }]
            },
            options: {
                legend: { display: false },
                plugins: {
                    title: {
                        display: true,
                        text: 'Kuukausikuluihin käytetty raha ajan mittaan'
                    }
                }
            }
        });
    });
</script>
