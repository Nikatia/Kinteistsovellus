<canvas id="myChart"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.0.1/dist/chart.umd.js"></script>
<script>
    $(document).ready(function () {
        var xValues = ["Tammikuu", "Helmikuu", "Maaliskuu", "Huhtikuu", "Toukokuu", "Kesäkuu", "Heinäkuu", "Elokuu", "Syyskuu", "Lokakuu", "Marraskuu", "Joulukuu"];
        let yValues = @ViewBag.Year;
        new Chart("myChart", {
            type: "line",
            data: {
                labels: xValues,
                datasets: [{
                    data: yValues,
                    borderColor: 'rgba(5, 163, 23, 0.8)',
                    backgroundColor: 'rgba(5, 163, 23, 0.2)',
                    borderWidth: 2,
                    borderRadius: 5,
                    label: " euro",
                    fill: false,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    title: {
                        display: true,
                        text: 'Kuukausikuluihin käytetty raha ajan mittaan'
                    },
                    legend: {
                        display: true,
                        labels: {
                            usePointStyle: true,
                            pointStyle: 'rectRounded',
                            pointStyleWidth: 70
                        }
                    }
                }
            }
        });
    });
</script>
