@model Kiinteistosovellus.Models.Logins




@{
    ViewBag.Title = "_EditModalLogins";
}



<div class="modal fade" id="ModalLoginsEdit">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Muokkaa</h3>
            </div>
            <div class="modal-body">

                @using (Html.BeginForm("Edit", "Logins", FormMethod.Post, new { id = "editLoginsForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.LoginID)
                        <div class="form-group">
                            Käyttäjätunnus <label id="userlabe" style="color:red">vaaditaan!</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @style = "float:left", @oninput = "jepsie()", @id = "usern", @class = "form-control", @maxlength = "15" } })

                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div style="clear:both" , class="form-group">
                            Salasana <label id="passlabe" style="color:red">vaaditaan!</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @style = "float:left", @oninput = "jepsie()", @id = "passw", @class = "form-control", @maxlength = "15" } })

                                @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                }

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }

            </div>
            <div class="modal-footer">
                <button type="submit" id="loginModb" class="btn btn-primary" form="editLoginsForm">Tallenna</button>
                <button type="button" onclick="jepajuus()" id="nappi" class="btn btn-primary">Tallenna</button>
                @Html.ActionLink("Takaisin", "Index", "logins")
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        //  $("#loginModb").prop('disabled', true);
        $("#loginModb").hide();
        $("#userlabe").hide();
        $("#passlabe").hide();
    });

    function jepsie() {
        var usernameValue = $("#usern").val();
        var passwordValue = $("#passw").val();
        // alert(usernameValue);
        if (usernameValue == null || usernameValue == "" || passwordValue == null || passwordValue == "") {
            $("#loginModb").prop('disabled', true);


        } else {
            $("#loginModb").prop('disabled', false);

        }
        if ( usernameValue == "") {
            $("#userlabe").show();
        } else {
            $("#userlabe").hide();
        }

        if ( passwordValue == "") {
            $("#passlabe").show();
        } else {
            $("#passlabe").hide();
        }
    };
    function jepajuus() {
        var usernameValue = $("#usern").val();
        var passwordValue = $("#passw").val();
        if (usernameValue == null || usernameValue == "") {
            $("#userlabe").show();
        } else {
            $("#userlabe").hide();
        }

        if (passwordValue == null || passwordValue == "") {
            $("#passlabe").show();
        } else {
            $("#passlabe").hide();
        }
        if (usernameValue != null && usernameValue != "" && passwordValue != null && passwordValue != "") {
            $("#loginModb").click();
        }
    }
</script>






