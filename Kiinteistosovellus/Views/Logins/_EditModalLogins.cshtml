@model Kiinteistosovellus.Models.Logins




@{
    ViewBag.Title = "_EditModalLogins";
}



<div class="modal fade" id="ModalLoginsEdit">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Muokkaa</h2>
            </div>
            <div class="modal-body">

                @using (Html.BeginForm("Edit", "Logins", FormMethod.Post, new { id = "editLoginsForm" }))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @*<h4>Käyttäjät</h4>*@
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.LoginID)
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, "Käyttäjänimi", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @style = "float:left", @oninput = "jepsie()", @id = "usern", @class = "form-control", @maxlength = "15" } })
                            <label id="userlabe" style="color:red">&nbsp; &nbsp;Kirjoita käyttäjänimi!</label>
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div style="clear:both" , class="form-group">
                        @Html.LabelFor(model => model.UserPassword, "Salasana", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @style = "float:left", @oninput = "jepsie()", @id = "passw", @class = "form-control", @maxlength = "15" } })
                            <label id="passlabe" style="color:red">&nbsp; &nbsp;Kirjoita salasana!</label>
                            @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    @*<div style="clear:both" class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="loginCreateButton" value="Tallenna" class="btn btn-primary" />
                @Html.ActionLink("Takaisin", "Index", "logins", new { @Class = "btn btn-secondary" })
            </div>

        </div>*@

                </div>
                }



                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }

                <br />
                <div class="modal-footer" style="display:inline-block">
                    @*<button type="submit" class="btn btn-primary" id="cr">Validate</button>*@
                    <button type="submit" id="loginModb" class="btn btn-primary" form="editLoginsForm">Tallenna</button>
                    @Html.ActionLink("Takaisin", "Index", "logins", new { @Class = "btn btn-secondary" })

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#loginModb").prop('disabled', true);

    });

    function jepsie() {
        var usernameValue = $("#usern").val();
        var passwordValue = $("#passw").val();
        // alert(usernameValue);
        if (usernameValue == null || usernameValue == "" || passwordValue == null || passwordValue == "") {
            $("#loginModb").prop('disabled', true);


        } else {
            $("#loginModb").prop('disabled', false);

        }
        if (usernameValue == null || usernameValue == ""){
            $("#userlabe").show();
        } else {
            $("#userlabe").hide();
        }

        if (passwordValue == null || passwordValue == "") {
            $("#passlabe").show();
        } else {
            $("#passlabe").hide();
        }
    };
</script>
