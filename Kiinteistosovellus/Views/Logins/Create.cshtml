@model Kiinteistosovellus.Models.Logins

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Logins</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.UserName, "Käyttäjänimi", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @style = "float:left", @oninput = "jeps()", @id = "us", @class = "form-control" } })
            <label id="userla" style="color:red">&nbsp; &nbsp;Kirjoita käyttäjänimi!</label>
            @Html.ValidationMessageFor(model => model.UserName, "", new {  @class = "text-danger" })
        </div>
    </div>

    <div style="clear:both", class="form-group">
        @Html.LabelFor(model => model.UserPassword, "Salasana", htmlAttributes: new {  @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @style = "float:left", @oninput = "jeps()", @id = "pa", @class = "form-control" } })
            <label id="passla" style="color:red">&nbsp; &nbsp;Kirjoita salasana!</label>
            @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div style="clear:both" class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" id="loginCreateButton" value="Tallenna" class="btn btn-primary" />
            @Html.ActionLink("Takaisin", "Index", "logins", new { @Class = "btn btn-secondary" })
        </div>
       
    </div>
  
</div>
}



<script>
    $(document).ready(function () {
        $("#loginCreateButton").prop('disabled', true);
       
    });

    function jeps() {
        var usernameValue = $("#us").val();
        var passwordValue = $("#pa").val();
        // alert(usernameValue);
        if (usernameValue == null || usernameValue == "" || passwordValue == null || passwordValue == "") {
            $("#loginCreateButton").prop('disabled', true);
           

        } else {
            $("#loginCreateButton").prop('disabled', false);
           
        }
        if (usernameValue == null || usernameValue == ""){
            $("#userla").show();
        } else {
            $("#userla").hide();
        }

        if (passwordValue == null || passwordValue == "") {
            $("#passla").show();
        } else {
            $("#passla").hide();
        }
    };
</script>
